// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  nim       String    @unique @db.VarChar(10)
  nama      String    @db.Text
  alamat    String    @db.Text
  lahir     DateTime  @db.Date
  studi     String
  telepon   String    @db.VarChar(15)
  email     String    @unique
  password  String    @db.VarChar(128)
  laporans  Laporan[] @relation("Laporan Dikirim")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Laporan {
  id        Int    @id @default(autoincrement())
  jenis     String
  judul     String @db.Text
  laporan   String @db.Text
  bukti     String @db.Text
  pelapor   User   @relation("Laporan Dikirim", fields: [idPelapor], references: [id])
  idPelapor Int
}
